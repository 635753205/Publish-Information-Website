extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='information') Book:
      select#book.form-control(type='select' placeholder='Select Information' name='' required='true')
        - information_list.sort(function(a, b) {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for info in information_list
          if informationinstance
            option(value=information._id) #{information.title}
        
    div.form-group
      label(for='imprint') Imprint:
      input#imprint.form-control(type='text' placeholder='Publisher and date information' name='imprint' required='true' value=(undefined===informationInstance ? '' : informationInstance.imprint))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg

